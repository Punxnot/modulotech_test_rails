<div class="row">
  <div class="col-md-6">
    <%= form_for(Reservation.new, remote: true, format: :js, url: {controller: "reservations", action: "create"}) do |form| %>
      <h4>Book this room</h4>
      <%= form.hidden_field :room_id, value: @room.id %>
      <%= form.hidden_field :user_id, value: current_user&.id %>
      <div class="form-group">
        <%= form.label "Start Date:" %>
        <%= form.date_field :start_date, class: "form-control", min: Date.today %>
      </div>
      <div class="form-group">
        <%= form.label "End Date:" %>
        <%= form.date_field :end_date, class: "form-control", min: Date.today + 1.day %>
      </div>
      <div class="mt-3 mb-3">
        <%= form.button "Book", type: "submit", :class=> "btn btn-primary w-100" %>
      </div>
    <% end %>
  </div>
</div>
