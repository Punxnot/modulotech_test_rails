<%= form_for @room do |f| %>
  <div class="row">
    <div class="col-md-6">
      <%= f.hidden_field :user_id, value: current_user&.id %>
      <div class="form-group">
        <%= f.label "Name" %>
        <%= f.text_field :name, :class => "form-control" %>
      </div>

      <%= f.fields_for :address do |address_fields| %>
        <div class="form-group">
          <%= address_fields.label "City" %>
          <%= address_fields.text_field :city, :class => "form-control" %>
        </div>

        <div class="form-group">
          <%= address_fields.label "Street" %>
          <%= address_fields.text_field :street, :class => "form-control" %>
        </div>
      <% end %>

      <div class="form-group">
        <%= f.label "Price" %>
        <%= f.text_field :price, :class => "form-control" %>
      </div>

      <div class="mt-2">
        <%= submit_tag "#{@room.new_record? ? "Create" : "Update"} Room", class: "btn btn-primary w-100" %>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group">
        <label>Add images</label>
        <%= f.file_field :images, multiple: true, direct_upload: true, :class => "form-control" %>
      </div>
    </div>
  </div>
<% end %>
